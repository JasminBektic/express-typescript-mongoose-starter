{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "pretty": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}